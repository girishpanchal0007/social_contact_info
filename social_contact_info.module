/**
 * Implements hook_block_save()
 */
function social_contact_info_block_save($delta = '', $edit = array()) {

  if ($delta == 'social_contact_info') {
    // Contact detail array of fields.
    variable_set('social_contact_info_contact_detail', $edit['contact_detail']);
    // Social detail array of fields.
    variable_set('social_contact_info_social_detail', $edit['social_detail']);
  }
}

/**
 * Implements hook_block_view().
 */
function social_contact_info_block_view($delta = '') {
  $block = array();
  if ($delta == 'social_contact_info') {
    $block['subject'] = t('Contact Us');
    $block['content'] = array(
      '#theme' => 'social_contact_info_contact_social_detail',
      '#contact_detail' => variable_get('social_contact_info_contact_detail'),
      '#social_detail' => variable_get('social_contact_info_social_detail'),
    );
  }
  return $block;
}

/**
 * Theme function for the platforms.
 */
function theme_social_contact_info_contact_social_detail(&$variables) {
  $output = '';

  $contact_array = $variables['contact_detail'];
  $social_array = $variables['social_detail'];
  $contact_array_shift = array_slice($contact_array, 2);
  $social_array_shift = array_slice($social_array, 1);

  $output .= '<div class="social-contact-block">';
    // Contact section title.
    $output .=  '<h3>' . $contact_array['contact_title'] . '</h3>'; 
    $output .=  '<div class="contact-address">' . $contact_array['contact_address']['value'] . '</div>'; 
    foreach ($contact_array_shift as $name => $contact_value) {
      $class = array(str_replace('_', '-', $name));
      $output .= '<div ' . drupal_attributes(array('class' => $class)) . '>';
      // Render the contact_value item.
      $output .= $contact_value;
      $output .= '</div>';
    }
  // exit;
  // Close the ul element.
  $output .= '</div>';


  $output .= '<div class="social-contact-block">';
    // Contact section title.
    $output .=  '<h3>' . $social_array['social_detail']['title'] . '</h3>'; 
    foreach ($social_array_shift as $name1 => $social_value) {
      $class1 = strtoupper(substr($name1, 7));
      $output .= '<div ' . drupal_attributes(array('class' => $class1)) . '>';
        // Render the contact_value item.
        $output .= '<a href="' . $social_value . '" rel="social_link" target="_blank">' . $class1 . '</a>';
      $output .= '</div>';
    }
  // exit;
  // Close the ul element.
  $output .= '</div>';

  return $output;
}
